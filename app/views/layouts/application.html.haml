%html{lang: "en"}
  %head
    %title EcoEnergy Services
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", :name => "viewport"}/
    / fav and touch icons
    %link{href: asset_path("ico/apple-touch-icon-144-precomposed.png"), rel: "apple-touch-icon-precomposed", sizes: "144x144"}/
    %link{href: asset_path("ico/apple-touch-icon-114-precomposed.png"), rel: "apple-touch-icon-precomposed", sizes: "114x114"}/
    %link{href: asset_path("ico/apple-touch-icon-72-precomposed.png"), rel: "apple-touch-icon-precomposed", sizes: "72x72"}/
    %link{href: asset_path("ico/apple-touch-icon-57-precomposed.png"), rel: "apple-touch-icon-precomposed"}/
    %link{href: asset_path("ico/favicon.png"), rel: "shortcut icon"}/

    / HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    / WARNING: Respond.js doesn't work if you view the page via file://
    /[if lt IE 9]
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>

    = yield :head
  %body{class: "#{controller.controller_name} #{controller.action_name} fuelux"}
    %main#wrapper.wrapkit-wrapper
      = render "shared/main_menu"
      = render "shared/main_sidebar"
      = yield
      = render "shared/footer"
