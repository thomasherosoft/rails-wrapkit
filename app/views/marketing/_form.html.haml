.panel.panel-default
  .panel-heading
    %h3.panel-title New Marketing Document

  .panel-body
    = simple_form_for @marketing_document, html: {class: "form-horizontal"}, defaults: { label: false } do |f|
      .form-group
        %label.col-md-3.control-label{for: "doc_name"} Name
        .col-md-5
          = f.input :name, placeholder: "Document Name"

      .form-group
        .col-md-5.col-md-offset-3
          = f.button :submit, "Save Document"


= form_for @marketing_document do |f|
  - if @marketing_document.errors.any?
    #error_explanation
      %h2= "#{pluralize(@marketing_document.errors.count, "error")} prohibited this marketing_document from being saved:"
      %ul
        - @marketing_document.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.submit 'Save'
