  = render "shared/header"

  .content
    .help-block.text-center
      = render "marketing_tab_row"
    %hr
    %section.agent-info
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading
              / .panel-actions-input
              /   %a.btn.btn-default.btn-sm{:href => "#"} View all orders
              %h3.panel-title Programs
            .panel-body
              %table.table.latest-deals
                %thead
                  %tr
                    %th Program Code
                    %th Date
                    %th Active
                %tbody
                  %tr{data: {href: "#"}}
