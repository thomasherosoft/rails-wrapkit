              .row
                .col-sm-4
                  %p Special Promotions:
                .col-sm-8
                  %p 30 Days Free A/C

              .row
                .col-sm-12
                  %p NOTES:
                  %br
                  %textarea#inputTextarea.form-control{:placeholder => "Placeholder", :rows => "3"}
              %hr
              .row
                .col-sm-12.text-right
                  .form-group
                    %button.btn.btn-primary{:type => "submit"} UPDATE

    %hr

